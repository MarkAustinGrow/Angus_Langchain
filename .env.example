# Agent Angus LangChain + Coral Protocol Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== ORIGINAL AGENT ANGUS CREDENTIALS =====
# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# YouTube API Configuration
YOUTUBE_CLIENT_ID=your_youtube_oauth_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_oauth_client_secret
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
YOUTUBE_API_KEY=your_youtube_api_key

# Optional: Sonoteller API (for advanced music analysis)
SONOTELLER_API_KEY=your_sonoteller_api_key

# ===== CORAL PROTOCOL CONFIGURATION =====
# Coral Server Settings
CORAL_SERVER_HOST=localhost
CORAL_SERVER_PORT=5555

# ===== AGENT CONFIGURATION =====
# Logging and Debug Settings
AGENT_LOG_LEVEL=INFO
DEBUG_MODE=false

# Agent Behavior Settings
AGENT_HEARTBEAT_INTERVAL=30
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=5

# ===== TASK SCHEDULING =====
# Task Intervals (in seconds)
UPLOAD_TASK_INTERVAL=3600      # 1 hour
COMMENT_TASK_INTERVAL=3600     # 1 hour  
CLEANUP_TASK_INTERVAL=86400    # 1 day

# ===== PROCESSING LIMITS =====
# Batch Processing Limits
MAX_SONGS_PER_BATCH=5
MAX_COMMENTS_PER_VIDEO=100
MAX_REPLIES_PER_BATCH=10

# Data Retention
LOG_RETENTION_DAYS=7

# ===== DEVELOPMENT/TESTING =====
# Mock API Settings (for testing without real APIs)
MOCK_YOUTUBE_API=false
MOCK_OPENAI_API=false

# Performance Testing
PERFORMANCE_TEST_MODE=false
LOAD_TEST_AGENTS=10
MESSAGE_RATE=100

# ===== SECURITY (Production Settings) =====
# Authentication (set to true in production)
AUTHENTICATION_ENABLED=false
AUTHORIZATION_ENABLED=false
API_KEY_REQUIRED=false

# Rate Limiting
RATE_LIMITING_ENABLED=true
REQUESTS_PER_MINUTE=1000
REQUESTS_PER_HOUR=10000

# ===== MONITORING =====
# Metrics and Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics

# Health Check Settings
HEALTH_CHECK_INTERVAL=60
HEARTBEAT_TIMEOUT=90
MAX_MISSED_HEARTBEATS=3

# ===== DATABASE SETTINGS =====
# Connection Pool Settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_CONNECTION_TIMEOUT=30

# Query Settings
MAX_BATCH_SIZE=100
MAX_QUERY_TIMEOUT=30
MAX_RETRIES_PER_QUERY=3

# ===== WORKFLOW SETTINGS =====
# Workflow Execution
MAX_CONCURRENT_WORKFLOWS=50
WORKFLOW_TIMEOUT=1800          # 30 minutes
STEP_TIMEOUT=300               # 5 minutes

# Retry Policy
WORKFLOW_MAX_ATTEMPTS=3
WORKFLOW_INITIAL_DELAY=1
WORKFLOW_MAX_DELAY=60
WORKFLOW_MULTIPLIER=2

# ===== COMMUNICATION SETTINGS =====
# Protocol Settings
DEFAULT_PROTOCOL=http
SERIALIZATION_FORMAT=json
KEEP_ALIVE_ENABLED=true
KEEP_ALIVE_INTERVAL=30

# Connection Pooling
CONNECTION_POOLING_ENABLED=true
MAX_POOL_SIZE=20
MIN_POOL_SIZE=5
POOL_TIMEOUT=30

# ===== ERROR HANDLING =====
# Error Recovery
GLOBAL_ERROR_HANDLER_ENABLED=true
ERROR_NOTIFICATION_ENABLED=true
ERROR_RECOVERY_ENABLED=true
MAX_ERROR_RETRIES=3
ERROR_RETRY_DELAY=5

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# ===== YOUTUBE SPECIFIC SETTINGS =====
# Upload Settings
YOUTUBE_DEFAULT_PRIVACY=public
YOUTUBE_DEFAULT_CATEGORY=10    # Music category
YOUTUBE_MAX_FILE_SIZE_MB=128000

# Rate Limits
YOUTUBE_UPLOADS_PER_DAY=6
YOUTUBE_API_CALLS_PER_MINUTE=100
YOUTUBE_COMMENTS_PER_MINUTE=10

# ===== OPENAI SPECIFIC SETTINGS =====
# Model Settings
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_ANALYSIS_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Rate Limits
OPENAI_RATE_LIMIT_RPM=3500     # requests per minute
OPENAI_RATE_LIMIT_TPM=90000    # tokens per minute

# Analysis Settings
MAX_AUDIO_DURATION=600         # 10 minutes
CACHE_RESULTS=true
CACHE_DURATION=3600            # 1 hour

# ===== LOAD BALANCING =====
# Load Balancing Strategy
LB_STRATEGY=round_robin        # round_robin, least_connections, weighted
LB_HEALTH_CHECK_ENABLED=true
LB_HEALTH_CHECK_INTERVAL=30
LB_UNHEALTHY_THRESHOLD=3
LB_RECOVERY_THRESHOLD=2

# Agent Weights (for weighted load balancing)
LB_WEIGHT_COORDINATOR=1.0
LB_WEIGHT_YOUTUBE=1.0
LB_WEIGHT_DATABASE=1.5
LB_WEIGHT_AI=0.8

# ===== AGENT ENDPOINTS =====
# Base port for agent endpoints
AGENT_BASE_PORT=8000

# Individual agent ports (calculated as BASE_PORT + offset)
COORDINATOR_PORT=8000
YOUTUBE_AGENT_PORT=8001
DATABASE_AGENT_PORT=8002
AI_AGENT_PORT=8003

# ===== DEVELOPMENT HELPERS =====
# Pretty printing and debugging
RICH_CONSOLE_ENABLED=true
PROGRESS_BARS_ENABLED=true
VERBOSE_LOGGING=false

# Testing and Simulation
SIMULATION_MODE=false
TEST_DATA_ENABLED=false
MOCK_EXTERNAL_APIS=false
